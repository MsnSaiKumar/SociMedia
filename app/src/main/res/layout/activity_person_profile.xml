<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="50dp"
                android:id="@+id/person_profile_profiPic"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile"/>
            <TextView
                android:id="@+id/person_profile_ProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:layout_below="@id/person_profile_profiPic"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/person_profile_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:layout_below="@id/person_profile_ProfileName"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/person_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hey!! hello am using SociMedia "
                android:layout_below="@id/person_profile_Username"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/person_profile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Country"
                android:layout_below="@id/person_profile_status"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>


            <TextView
                android:id="@+id/person_profile_Dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOB"
                android:layout_below="@id/person_profile_country"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/person_profile_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_below="@id/person_profile_Dob"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/peerson_profile_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RelationshipStatus"
                android:layout_below="@id/person_profile_gender"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
            <Button
                android:id="@+id/send_request_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Send Request"
                android:background="@android:color/holo_green_dark"
                android:layout_below="@+id/peerson_profile_relation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/decline_request_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="decline request"
                android:background="@android:color/holo_red_dark"
                android:layout_below="@+id/send_request_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>