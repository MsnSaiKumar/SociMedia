<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="50dp"
                android:id="@+id/profile_profiPic"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile"/>
            <TextView
                android:id="@+id/profile_ProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:layout_below="@id/profile_profiPic"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/profile_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:layout_below="@id/profile_ProfileName"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hey!! hello am using SociMedia "
                android:layout_below="@id/profile_Username"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/profile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Country"
                android:layout_below="@id/profile_status"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>


            <TextView
                android:id="@+id/profile_Dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOB"
                android:layout_below="@id/profile_country"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/profile_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_below="@id/profile_Dob"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/profile_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RelationshipStatus"
                android:layout_below="@id/profile_gender"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
            <Button
                android:id="@+id/no_of_posts_btn"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_relation"
                android:text="no of posts"
                android:background="@android:color/holo_green_light"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                />
            <Button
                android:id="@+id/no_of_friends_btn"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_relation"
                android:layout_toRightOf="@id/no_of_posts_btn"
                android:text=" no of Friends"
                android:background="@android:color/holo_green_light"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>