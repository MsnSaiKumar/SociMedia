<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".ResetPasswordActivity">
    <include
        layout="@layout/app_bar_layout1"
        android:id="@+id/forget_password_toolbar"
        />
    <TextView
        android:id="@+id/reset_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We will mail you a link after when you provide e,ail and click on send button.
Pleae click on that link to reset your password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_below="@id/forget_password_toolbar"

        />
    <EditText
        android:id="@+id/reset_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_text"
        android:layout_marginTop="22dp"
        android:hint="Enter your email here"
        android:background="@drawable/input3"
        android:padding="15dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/reset_sendemailbutton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Send email"
        android:background="@drawable/input3"
        android:layout_below="@id/reset_edittext"/>

</RelativeLayout>